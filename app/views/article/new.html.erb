
<%= form_with(model: @article, local: true) do |form| %>
  <%# colocamos el parámetro local true para que no haga una petición Ajax %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>  
  <div>
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>  
  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>